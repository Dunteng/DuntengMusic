.comment-content{
  width: 100%;
  height: 300rpx;
  margin: 70rpx 10rpx;
  text-align: left;
  box-sizing: border-box;
}

button.send{
  background-color: #d43c33;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 100rpx;
}

button.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  padding: 0;
  height: 100%;
  border: none;
  font-weight: normal;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  display: none;
}

.share-hover::after {
  border: 0;
}